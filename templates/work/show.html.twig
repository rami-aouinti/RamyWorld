{% extends 'base.html.twig' %}

{% block title %}Work{% endblock %}

{% block body %}
    <h1>Work</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ work.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ work.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ work.description }}</td>
            </tr>
            <tr>
                <th>Repository</th>
                <td>{{ work.repository }}</td>
            </tr>
            <tr>
                <th>Start_date</th>
                <td>{{ work.startDate ? work.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>End_date</th>
                <td>{{ work.endDate ? work.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ work.createdAt ? work.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ work.updatedAt ? work.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('work_index') }}">back to list</a>

