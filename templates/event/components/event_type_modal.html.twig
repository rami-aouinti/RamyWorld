<div class="modal fade" id="modal-form-type" tabindex="-1" role="dialog" aria-labelledby="modal-form-type" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-sm" role="document">
        <div class="modal-content">
            <div class="modal-body p-0">
                <div class="card card-plain">
                    <div class="card-header pb-0 text-left">
                        <h5 class="">New Event</h5>
                        <p class="mb-0">Insert new event</p>
                    </div>
                    <div class="card-body">
                        <form id="myFormType" role="form text-left">
                            <div class="input-group input-group-outline my-3">
                                <input type="text" name="name" class="form-control text-warning" onfocus="focused(this)" onfocusout="defocused(this)" placeholder="Title">
                            </div>
                            <div class="input-group input-group-outline my-3">
                                <label>Background Color </label>
                                <input type="color" name="backgroundColor" class="form-control text-warning">
                            </div>
                            <div class="input-group input-group-outline my-3">
                                <label>Border Color </label>
                                <input type="color" name="borderColor" class="form-control text-warning">
                            </div>
                            <div class="input-group input-group-outline my-3">
                                <label>Text Color </label>
                                <input type="color" name="textColor" class="form-control text-warning">
                            </div>
                            <div class="text-center">
                                <button type="button" onclick="addNewEventType()" class="btn btn-round bg-gradient-warning btn-lg w-100 mt-4 mb-0">Save</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
